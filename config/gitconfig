# Move to ~/.gitconfig

[color]
    ui = true
[pull]
    rebase = true
[push]
    default = current
[fetch]
    prune = true
[core]
    autocrlf = false
    preloadindex = true
    symlinks = false
    editor = vim
    excludesfile = ~/.gitignore
[gpg]
    format = ssh
[user]
    signingkey = ~/.ssh/id_ed25519.pub
[commit]
    gpgsign = true
[tag]
    gpgSign = true
[log]
    decorate = short
[http]
    sslVerify = false
[pack]
    useSparse = true
[protocol]
    version = 2
[init]
    defaultBranch = main

# Allows for flexible, folder-based git configs

[includeIf "gitdir:~/codebase/github/"]
    path = ~/codebase/github/.gitconfig
[includeIf "gitdir:~/codebase/other/"]
    path = ~/codebase/other/.gitconfig
